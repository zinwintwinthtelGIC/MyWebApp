@model IEnumerable<MyWebApp.Models.Employee>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TeamNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BandNo)
            </th>
            <th>
                Status 1
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TeamNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BandNo)
            </td>
            @if (item.BandNo == 1)
            {
                <td>
                    <a asp-action="DisplayOne">&#9678;</a>
                </td>
            }
            else
            {
                <td>
                    <a asp-action="DisplayTwo">&#9651;</a>
                </td>
            }

            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
